@model Cinema.Web.Models.DeleteViewModel

@{
    ViewBag.Title = "Delete";
}

<div class="page-header">
    <h1>Delete</h1>
</div>

<div class="col-sm-offset-1">
    <h4>Are you sure you want to delete <strong>'@Model.Name'</strong> movie?</h4>
    <br/>
    <div class="col-sm-offset-1">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger"/>
                <input type="button" value="Back" class="btn btn-default" onclick="location.href = '@Url.Action("Index")'"/>
            </div>
        }
    </div>

</div>
