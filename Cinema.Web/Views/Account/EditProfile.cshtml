@model Cinema.Web.Models.ProfileViewModel

@{
    ViewBag.Title = "Edit profile";
}

<script src="~/Scripts/Custom/cusotm_validators.js"></script>
<script src="~/Scripts/Custom/edit_profile.js"></script>

<div class="page-header">
    <h1>Edit profile</h1>
</div>

@using (Html.BeginForm("EditProfile", "Account", FormMethod.Post, new { @class = "form-horizontal", id="edit-profile-form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(x => x.Id)

    @Html.Partial("FormValidation")

    <div class="form-group">
        @Html.LabelFor(x => x.Name, new {@class = "control-label col-sm-2"})
        @Html.TextBoxFor(x => x.Name, new {@class = "form-control col-sm-4"})
        <span class="help-block col-sm-6 hidden" id="name-label">Name is required. Check name for leading and trailing spaces.</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Surname, new {@class = "control-label col-sm-2"})
        @Html.TextBoxFor(x => x.Surname, new {@class = "form-control col-sm-4"})
        <span class="help-block col-sm-6 hidden" id="surname-label">Surname is required. Check surname for leading and trailing spaces.</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Phone, new { @class = "control-label col-sm-2" })
        @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", placeholder = "Input your phone number" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Photo, new {@class = "control-label col-sm-2"})
        @Html.TextBoxFor(x => x.Photo, new { @type = "file", @class = "col-sm-4" })
        <span class="help-block col-sm-6 hidden" id="file-label">Maximum size of posted file is 5 MB.</span>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input class="btn btn-success" type="button" value="Edit profile" id="submit-btn"/>
        </div>
    </div>
}

<script src="@Url.Content("~/Scripts/jquery.maskedinput.js")" type="text/javascript"></script>
<script>
    $("#Phone").mask("+38 (999) 999-99-99");
</script>