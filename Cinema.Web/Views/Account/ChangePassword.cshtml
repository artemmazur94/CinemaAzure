@model Cinema.Web.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Change password";
}

<script src="~/Scripts/Custom/change_password.js"></script>

<div class="page-header">
    <h1>Change password</h1>
</div>

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new {@class = "form-horizontal", id = "change-password-form"}))
{
    @Html.AntiForgeryToken()
    @Html.Partial("FormValidation")
    <div class="form-group">
        @Html.LabelFor(x => x.OldPassword, new {@class = "control-label col-sm-2"})
        @Html.PasswordFor(x => x.OldPassword, new {@class = "form-control col-sm-4"})
        <span class="help-block col-sm-3 hidden" id="old-password-label">Old password is required.</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.NewPassword, new {@class = "control-label col-sm-2"})
        @Html.PasswordFor(x => x.NewPassword, new {@class = "form-control col-sm-4"})
        <span class="help-block col-sm-3 hidden" id="new-password-label">Minimum password length is 8 chars.</span>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.NewPasswordConfirm, new {@class = "control-label col-sm-2"})
        @Html.PasswordFor(x => x.NewPasswordConfirm, new {@class = "form-control col-sm-4"})
        <span class="help-block col-sm-3 hidden" id="new-password-confirm-label">Passwords are nor equal.</span>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="button" class="btn btn-success" value="Change password" id="submit-btn"/>
        </div>
    </div>
}
<hr />
<div>
    @Html.ActionLink("< My profile", "MyProfile")
</div>
